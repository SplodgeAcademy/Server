<%= form_with(model: multiple_choice) do |form| %>
    <%# Error handling %>
    <% if multiple_choice.errors.any? %>
        <div style="color: red">
            <h2><%= pluralize(multiple_choice.errors.count, "error") %> prohibited this multiple_choice from being saved:</h2>

            <ul>
                <% multiple_choice.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%# Question input %>
    <div>
        <%= form.label :question, style: "display: block" %>
        <%= form.text_field :question %>
    </div>

    <%# Answer input %>
    <div>
        <%= form.label :answer, style: "display: block" %>
        <%= form.text_field :answer %>
    </div>

    <%# Option A input %>
    <div>
        <%= form.label :a, style: "display: block" %>
        <%= form.text_field :a %>
    </div>

    <%# Option B input %>
    <div>
        <%= form.label :b, style: "display: block" %>
        <%= form.text_field :b %>
    </div>

    <%# Option C input %>
    <div>
        <%= form.label :c, style: "display: block" %>
        <%= form.text_field :c %>
    </div>

    <%# Option D input %>
    <div>
        <%= form.label :d, style: "display: block" %>
        <%= form.text_field :d %>
    </div>

    <%# Submit button %>
    <div>
        <%= form.submit %>
    </div>
<% end %>
